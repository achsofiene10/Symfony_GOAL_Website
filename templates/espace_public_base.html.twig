                    </a>


                </li>

            </ul>


        {% else %}



            <ul>
                <li>
                    <a href="{{ path('espace_public_connexion') }}">
                        <img src="/images/icone/sign-in.svg"><span>  Connexion </span>
                    </a>

                </li>

            </ul>


            <ul>
                <li>

                    <a href="{{ path('inscription') }}">
                        <img src="/images/icone/note.svg"> <span> Inscription  </span>
                    </a>
                    <ul>
                        <li>

                            <a href="{{ path('espace_public_inscription_client') }}">
                                <img src="/images/icone/client.svg"> <span> Comme Client  </span>
                            </a>


                        </li>
                        <li>

                            <a href="{{ path('espace_public_inscription_agence') }}">
                                <img src="/images/icone/placeholder.svg"> <span> Comme Agence  </span>
                            </a>


                        </li>
                    </ul>

                </li>

            </ul>


        {% endif %}


        <ul>
