                <a href="{{ path('espace_public_nos_terrains') }}">
                    <img src="/images/icone/soccer-field.svg"> <span> Nos Terrain  </span>
                </a>

            </li>

        </ul>


        <ul>
            <li>

                <a href="{{ path('espace_public_nos_agences') }}">
                    <img src="/images/icone/placeholder.svg"> <span>Nos Agences </span>
                </a>

            </li>

        </ul>

        <ul>

            <li>

                <a href="{{ path('espace_public_nos_tournois') }}">
                    <img src="/images/icone/trophy.svg"><span> Nos Tournois</span>
                </a>

            </li>

        </ul>

    </div>


    <div id="conteneur_recherche">

        <div class="searchbar ">
            <input class="search_input" type="text" name="" placeholder="Chercher...">
            <a href="#" class="search_icon"><img src="/images/icone/loupe.svg" id="loupe_icone"></a>
        </div>

    </div>
</nav>


<section>

    {% block section %}

    {% endblock %}

</section>


<footer>
    <div id="social">
        <ul>
            <li>
                <a href="#"> <img src="/images/icone/facebook.svg" class="social_img"></a>
            </li>

