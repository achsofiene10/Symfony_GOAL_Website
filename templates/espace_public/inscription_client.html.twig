{% extends 'espace_public_base.html.twig' %}

{% block title %} Inscription Client{% endblock %}

{% block body_notification %}

{% if notification is defined %} onload="setTimeout(cacherDiv,3000);" {% endif %}

{% endblock %}




{% block section %}


{% if notification is defined %} 


<div id="notification">
                <div class="rectangle {{notification}}">
                    <div class="notification-text">
                        <img src="/images/icone/{{notification}}.svg" id="icone_notification">
                        <span>{{contenu}}</span>
                    </div>
                </div>
            </div>
       

 {% endif %}




    <h1>S'inscrire</h1>
           
    <h2>Vous avez déjà un compte GOAL ?  <a href="{{path('espace_public_connexion')}}">Se connecter</a></h2>
    <article>  
      <div id="formulaire_connection" class="bloc">
           
        <form method="post"  action="{{path('espace_public_inscription_client')}}">
              
			
          <div class="floating-form">

                <div class="floating-label">      
                
                    <input class="floating-input" type="text" placeholder=" " name="prenom" required pattern="[A-Za-z]{3,}" title="Votre prénom doit être constitué seulement des lettres et de longueur minimale 3 ">
                
                    <span class="highlight"></span>
                
                    <label>Prénom</label>
                
                </div>




          
                <div class="floating-label">      
                
                    <input class="floating-input" type="text" placeholder=" " name="nom" pattern="[A-Za-z]{3,}" title="Votre nom doit être constitué seulement des lettres et de longueur minimale 3 ">
                
                    <span class="highlight"></span>
                
                    <label>Nom</label>
                
                </div>





                <div class="floating-label">      
                
                    <input class="floating-input" type="email" placeholder=" " name="email"required > 
                
                    <span class="highlight"></span>
                
                    <label>Email</label>
                
                </div>
            
         
          

               <div class="floating-label">      
                
                    <input class="floating-input" type="password" placeholder=" " name="mot_passe" required pattern=".{8,}" title="Votre mot de passe doit contenir au moins 8 caractères">
                
                    <span class="highlight"></span>
                
                    <label>Mot de passe</label>
                
                </div>

                
                <div class="floating-label">      
                
                    <input class="floating-input" type="date" onclick="(this.type='date')" placeholder=" " name="date_naissance" required>
                
                    <span class="highlight"></span>
                
                  <label>Date de naissance</label>
                
                </div>



                <div class="sexe">
                  <h5>Sexe:</h5>
                    <div class="radio">
                        <input id="homme" name="sexe" type="radio" value="homme" checked>
                        <span class="sexespan">Homme</span>
                      </div>
                    
                      <div class="radio" >
                        <input id="femme" name="sexe" type="radio" value="femme">
                        <span class="sexespan">Femme</span>
                      </div>
                </div>

             




          
          <center>
          <div>
            <button type="submit" class="connection_bouton">S'inscrire</button>
          </div></center>


          </div>
        </form>
      </div>
      
      <div id="connection" class="bloc">
        <ul class="connection_api">
          <a href="#"><li id="Google"><img src="/images/photo/google.png"><span>Continuer avec Google</span></li></a>
          <a href="#"><li id="Facebook"><img src="/images/photo/Facebook.png"><span>Continuer avec Facebook</span></li></a>
          </ul>
        </div>
    </article>
    <p>* En vous connectant, vous acceptez nos Conditions</br>
       d'utilisation et de recevoir des e-mails et actualités GOAL et</br> 
      vous reconnaissez avoir lu notre Politique de confidentialité.</p>
{% endblock %}