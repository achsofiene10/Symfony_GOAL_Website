{% extends 'espace_client_base.html.twig' %}

{% block title %} Nos Agences{% endblock %}

{% block section %}

   <article>  
      
    
<div class="slideshow-container">


    <div class="myslides fade">
    
    <div class="numbers">1 / 4</div>
    
    <div><img src="/images/photo/agence1.jpg" alt="Exemple de stade de basket."class="slider_img"></div>
    
  
    
    </div>
    
    
    <div class="myslides fade">
    
    <div class="numbers">2 / 4</div>
    
    <div><img src="/images/photo/agence2.jpg" alt="Exemple de stade de tennis." class="slider_img"></div>
    
    
    
    </div>
    
    
    <div class="myslides fade">
    
    <div class="numbers">3 / 4</div>
    
    <div><img src="/images/photo/agence3.jpg" alt="Exemple de stade de foot." class="slider_img"></div>
    
    
    </div>
    
    
    <div class="myslides fade">
    
    <div class="numbers">4 / 4</div>
    
    <div><img src="/images/photo/agence4.jpg" alt="Exemple de stade de tennis." class="slider_img"></div>
    
    
    
    </div>
    
    
