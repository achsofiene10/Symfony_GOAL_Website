    <span class="dots" onclick="currentSlide(3)"></span> 
    
    <span class="dots" onclick="currentSlide(4)"></span> 
    
    </div>

</article>
<article>
<form method='post' action="{{path('espace_client_nos_agences')}}">
<div class="rechercheterrain">





                  <button type="submit" class="bouton_recherche"><img src="/images/icone/loupe_inv.svg"></button>
  
                  <div class="floating-label">      
                
                    <input class="floating-input" type="text" placeholder=" " name="nom">
                
                    <span class="highlight"></span>
                
                    <label>Nom Agence</label>
                
                </div>

                <div class="floating-label">  
                
                    <select class="floating-select" onclick="this.setAttribute('value', this.value);" value="" name="trier">
                
                        <option value=""></option>
                
                        
                        <option value="distance">Distance</option>
                
                        <option value="note">Note</option>
                
               
                    </select>
                
               
                    <span class="highlight"></span>
               
                    
                
                    <label>Trier</label>
                
                
                </div>




</div>
</form>

</article>



<article>







      
      {% set j = 0 %}

      {% for agence in agences %}
        
      {% set j = j + 1 %}



      
      <div id="{{agence.id}}" class="overlay">
        <div class="popup">
          <div class="close">
            <a href="#stade{{agence.id}}">&times;</a>
          </div>
          <div class="content">
            <center>
                <a href="/images/photo/{{agence.photo}}"><img src="/images/photo/{{agence.photo}}" class="modalphoto"></a>
          </center>
  
          <table>
              <tr class="paire"><td><span class="champ">Nom : </span>         {{agence.nom}}</td>
              </tr>
  
              <tr class="impaire"><td><span class="champ">Numero Téléphone : </span>        {{agence.numTel}}</td>
              </tr>
              
  
            </table>
  
  
          </div>
        </div>
      </div>




{% endfor %}




 <div class="stades">
      {% set i = 0 %}
      
      {% for agence in agences %}

        {% if i == 0 %}
            <div class="stades">
        {% endif %}


          <div class="stade">
            
              <a href="#{{agence.id}}" id="stade{{agence.id}}">
                  <img src="/images/photo/{{agence.photo}}">
                  <span class="note_stade"><span class="star">&#9733;</span>4.3</span>
                  
                  <span class="titre_stade">{{agence.nom}}</span>
                  </a>
          </div>
        
        
        
        
        {% set i = i + 1 %}

        {% if i != j and i is divisible by(4) %}
            </div>
            <div class="stades">
        {% endif %}  
            
        {% if i == j %}
            </div>
        {% endif %}

      {% endfor %}


 




</article>

{% endblock %}